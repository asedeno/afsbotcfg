#!/bin/bash
ANT_VER="1.9.4"
ANT_TAR="apache-ant-${ANT_VER}-bin.tar.gz"
ANT_URL="http://apache.osuosl.org//ant/binaries/${ANT_TAR}"
ANT_DIR="${HOME}/ant"
if [ -d /vagrant/downloads ]; then
    DOWNLOAD_DIR="/vagrant/downloads"
else
    DOWNLOAD_DIR="${HOME}/downloads"    
fi
mkdir -p $DOWNLOAD_DIR
CACHED_FILE="${DOWNLOAD_DIR}/${ANT_TAR}"
[ -f $CACHED_FILE ] || curl -o $CACHED_FILE $ANT_URL
mkdir $ANT_DIR
cd $ANT_DIR
tar -xvz --strip-components=1 -f $CACHED_FILE
