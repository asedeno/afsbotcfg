#!/bin/bash
# Restart buildbot if the need-restart file is present and buildbot is quiet.
. $HOME/buildbot9/venv/bin/activate
if [ -f $HOME/buildbot9/master/need-restart ] ; then
  wget -q -O - https://buildbot.openafs.org/waterfall | grep -q building && exit
  buildbot restart $HOME/buildbot9/master
  rm -f $HOME/buildbot9/need-restart
fi
